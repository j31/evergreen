<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>

{{!-- Axios CDN --}}
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>

{{!-- Practice Apps --}}
<script src="/js/quiz/geo.js"></script>

{{!-- Kludgy data transport to app --}}
<script id="countries_data" type="text/javascript">{{{countries}}}</script>
<script id="username_data" type="text/javascript">"{{{username}}}"</script>
<script id="userk_data" type="text/javascript">{{{userk}}}</script>

</body>
</html>